<% layout('layouts/boilerplate')%>

    <h1 class="text-2xl text-center text-white">Create New Item</h1>

    <div class="flex justify-center">
        <form action="/items" method="post"
            class="grid gap-6 mb-6 md:grid-cols-2 md:border-2 px-2 py-2 m-2 rounded-md bg-white shadow">
            <div class="flex flex-col mb-4">
                <label for="title">Title</label>
                <input type="text" id="title" name="item[title]" placeholder="Item" required
                    class="border rounded px-2 py-2">
            </div>
            <div class="flex flex-col mb-4">
                <label for="category">Category</label>
                <select name="category" id="item[category]" required class="border rounded px-2 py-2">
                    <option value="sneakers" >Sneakers</option>
                    <option value="electronics">Electronics</option>
                    <option value="cards">Trading Cards</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div class="flex flex-col mb-4">
                <label for="dateBought">Date Bought</label>
                <input type="date" id="dateBought" name="item[dateBought]" required class="border rounded px-2 py-2">
            </div>
            <div class="flex flex-col mb-4">
                <label for="cost">Price Paid ($ USD)</label>
                <input type="number" id="cost" name="item[cost]" required min="0" placeholder="0.00" step=".01"
                    pattern="^\d*(\.\d{1,2})?$" class="border rounded px-2 py-2">
            </div>
            <div class="flex flex-col mb-4">
                <label>Sold?</label>
                <div>
                    <input type="radio" id="ifsoldtrue" name="item[ifSold]" value="true" onclick="toggleFormsOn()">
                    <label for="ifsoldtrue">Yes</label>
                </div>
                <div>
                    <input type="radio" id="ifsoldfalse" name="item[ifSold]" value="false" onclick="toggleFormsOff()" checked>
                    <label for="ifsoldfalse">No</label>
                </div>
            </div>
            <div class="flex flex-col mb-4">
                <label for="dateSold">Date Sold</label>
                <input type="date" id="dateSold" name="item[dateSold]" class="sold-field border rounded px-2 py-2 bg-gray-100 cursor-not-allowed" disabled>
            </div>
            <div class="flex flex-col mb-4">
                <label for="return">Price Sold</label>
                <input type="number" id="return" name="item[return]" class="sold-field border rounded px-2 py-2 bg-gray-100 cursor-not-allowed" disabled>
            </div>
            <div class="flex flex-col mb-4">
                <label for="fees">Fees</label>
                <input type="number" id="fees" name="item[fees]" class="sold-field border rounded px-2 py-2 bg-gray-100 cursor-not-allowed" disabled>
            </div>
            <div class="md: grid-cols-3">
                <button class="border rounded px-2 py-2">Create Item</button>
                <a href="/items">Cancel</a>
            </div>
        </form>
    </div>