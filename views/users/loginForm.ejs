<% layout('layouts/boilerplate')%>

    <h1 class="text-2xl text-center text-white py-2">Login</h1>

    <div class="flex justify-center">
        <form action="/login" method="post" id="form" class="mb-6 px-2 py-2 m-2 rounded-md bg-white shadow">

            <div class="flex flex-col mb-4">
                <label for="title">Username</label>
                <input type="text" id="username" name="username" required class="border rounded px-2 py-2">
                <span class="title-error hidden text-red-600 text-xs py-1">Title Error</span>
            </div>

            <div class="flex flex-col mb-4">
                <label for="dateBought">Password</label>
                <input type="password" id="password" name="password" required class="border rounded px-2 py-2">
                <span class=" password-error hidden text-red-600 text-xs py-1">Password Error</span>
            </div>
            <div class="md: grid-cols-3">
                <button type="submit" id="btn-submit" class="bg-green-500 text-white rounded px-2 py-2">Login</button>
                <a href="/items" class="bg-red-500 text-white rounded px-2 py-3">Cancel</a>
            </div>
        </form>
        <div id="blank-error" class="hidden block border-red-400"></div>
    </div>